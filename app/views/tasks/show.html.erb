  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>

  <% if @task.completed %>
    <input type="checkbox" checked>
    <p>This task is not yet completed.</p>
  <% else %>
    <input type="checkbox">
    <p>This task is completed.</p>
  <% end %>

<%= link_to "Back to list", tasks_path %>

<%= link_to "Edit this task", edit_task_path %>

