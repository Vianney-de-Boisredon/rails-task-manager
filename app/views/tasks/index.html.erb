<% @tasks.each do |task| %>
<p>
  <% if task.completed %>
    <input type="checkbox" checked>
  <% else %>
    <input type="checkbox">
  <% end %>
<%= link_to task.title, task_path(task) %>
<%= link_to "Delete this task", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
</p>
<% end %>

<%= link_to "Add a new task", new_task_path %>
